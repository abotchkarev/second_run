<div class="user_info" summary="sidebar info about current_user">
  <h1>
    Current user
  </h1>
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <%= current_user.name %>
    </span>
    </br></br>
    <% @user = current_user %>
    <%= render :partial => "shared/sidebar_info" %>

</div>

