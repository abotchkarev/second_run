<header>
  <%= link_to logo, root_path %>

  <nav id="list1" class="round">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <% if signed_in? %>
        <% unless current_user.admin? %>
          <li><%= link_to "Projects", current_user %></li>
        <% end %>
        <% unless current_user.subordinates.empty? %>
          <li><%= link_to "Group", group_user_path(current_user) %></li>
        <% end %>
        <li><%= link_to "Catalogue", users_path %></li>
      <% end %>
      <li><%= link_to "Help", help_path %></li>
    </ul>
  </nav>

  <nav id="list2" class="round">  
    <ul>
      <li>
        <% if signed_in? %>
          <span id="username">
            <%= link_to "#{current_user.name} â–¼", "#" %>
          </span>
          <div id="signout">
            <br/>
            <%= link_to "Settings", edit_user_path(current_user) %><br/><br/>
            <%= link_to "Sign out", signout_path, 
              :method => :delete, :type => "hidden" %>
          </div>
        <% else %>
          <%= link_to "Sign in", signin_path %>
        <% end %>
      </li>
    </ul>
  </nav>
</header>