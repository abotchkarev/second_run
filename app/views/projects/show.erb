<%#
# Viewer 'projects#show
%>
<table class="profile" summary="projects#show">
  <tr>
    <td class="main">
      <div class="project_details">
        <%=  render :partial => 'projects/details' %>
      </div><br/>
      <h3>
        Accomplishments
      </h3> 
      <table class="appointments">
        <%= render :partial => 'appointments/history_item', :collection => 
          @appointments, :as => :appointment, :locals => {:title => 'Name'}%>
      </table>
      <%= will_paginate @appointments %>
    </td>
    <td class="sidebar round">
      <h3>
        Summary of HR 
      </h3>
      <h3>
        Project Manager
      </h3>
      <strong>
        <p><%=  link_to @project.user.name, @project.user %></p>
      </strong>
      <h3>
        Team 
      </h3>
      <table>
        <%=  render :partial => 'projects/team' %>   
      </table>
    </td>
  </tr>
</table>
