<%#
# Viewer 'projects#show
%>
<table class="profile" summary="projects#show">
  <tr>
    <td class="main">
      <%=  render :partial => 'details' %>
      <p>
      <h3>Accomplishments</h3>
      </p>   
      <table class="appointments">
        <%= render :partial => 'appointments/summary',
          :collection => @appointments, :as => :appointment, 
          :locals => {:title => 'Name'}%>
      </table>
      <%= will_paginate @appointments %>
    </td>
    <td class="sidebar round">
      <h3>Summary for</h3>
      <p>
        <strong><%=  link_to current_user.name, current_user %></strong>
      </p>
      <h3>Project manager</h3>
      <p>
        <strong><%=  link_to @project.user.name, @project.user %></strong>    
      </p>
      <%=  render :partial => 'update_team' %>      
    </td>
  </tr>
</table>
